        <input type="password" name="password" id="edit-password" placeholder="Äá»•i máº­t kháº©u (náº¿u cáº§n)" class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-brand">
        <select name="is_admin" id="edit-is_admin" class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-brand">
